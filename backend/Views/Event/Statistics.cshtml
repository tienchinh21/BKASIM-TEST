@model MiniAppGIBA.Models.DTOs.Events.EventStatisticsDTO
@{
    ViewData["Title"] = "Thống Kê Sự Kiện";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">
                    <i class="fas fa-chart-bar me-2"></i>Thống Kê Sự Kiện
                </h2>
                <div>
                    <a href="@Url.Action("ExportStatistics", new { id = Model.EventId })" class="btn btn-success">
                        <i class="fas fa-file-excel me-1"></i>Xuất Excel
                    </a>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Quay Lại
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Thông Tin Sự Kiện</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Tên Sự Kiện:</strong> @Model.EventTitle</p>
                            <p><strong>Hội Nhóm:</strong> @Model.GroupName</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Thời Gian:</strong> @Model.StartTime.ToString("dd/MM/yyyy HH:mm") - @Model.EndTime.ToString("dd/MM/yyyy HH:mm")</p>
                            <p><strong>Địa Điểm:</strong> @(Model.Address ?? "N/A")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-primary">@Model.TotalRegistrations</h3>
                    <p class="mb-0">Tổng Đăng Ký</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-success">@Model.TotalCheckedIn</h3>
                    <p class="mb-0">Đã Tham Dự</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-warning">@Model.TotalNotCheckedIn</h3>
                    <p class="mb-0">Chưa Tham Dự</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-info">@Model.AttendanceRate%</h3>
                    <p class="mb-0">Tỷ Lệ Tham Dự</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-users me-2"></i>Danh Sách Người Tham Gia</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="statusFilter" class="form-label">Lọc Theo Trạng Thái:</label>
                        <select id="statusFilter" class="form-select" style="width: 250px;">
                            <option value="">Tất Cả</option>
                            <option value="2">Đã Tham Dự</option>
                            <option value="1">Chưa Tham Dự</option>
                            <option value="3">Đã Hủy</option>
                        </select>
                    </div>
                    
                    <table id="participantsTable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Họ Tên</th>
                                <th>Số Điện Thoại</th>
                                <th>Email</th>
                                <th>Mã Check-in</th>
                                <th>Ngày Đăng Ký</th>
                                <th>Thời Gian Check-in</th>
                                <th>Trạng Thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int stt = 1;
                            }
                            @foreach (var participant in Model.Participants)
                            {
                                <tr data-status="@participant.Status">
                                    <td>@stt</td>
                                    <td>@participant.Name</td>
                                    <td>@(participant.PhoneNumber ?? "N/A")</td>
                                    <td>@(participant.Email ?? "N/A")</td>
                                    <td>@(participant.CheckInCode ?? "N/A")</td>
                                    <td>@participant.RegisteredDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@(participant.CheckInTime.HasValue ? participant.CheckInTime.Value.ToString("dd/MM/yyyy HH:mm") : "Chưa check-in")</td>
                                    <td><span class="@participant.StatusClass">@participant.StatusText</span></td>
                                </tr>
                                stt++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var table = $('#participantsTable').DataTable({
                language: {
                    "lengthMenu": "Hiển thị _MENU_ dòng mỗi trang",
                    "zeroRecords": "Không tìm thấy kết quả",
                    "info": "Hiển thị từ _START_ đến _END_ của _TOTAL_ dòng",
                    "infoEmpty": "Hiển thị từ 0 đến 0 của 0 dòng",
                    "infoFiltered": "(lọc từ _MAX_ dòng)",
                    "search": "Tìm kiếm:",
                    "paginate": {
                        "first": "Đầu",
                        "last": "Cuối",
                        "next": "Sau",
                        "previous": "Trước"
                    }
                },
                order: [[6, 'desc']],
                pageLength: 25,
                responsive: true
            });

            // Custom filter function for status
            var statusFilterFunction = function(settings, data, dataIndex) {
                if (settings.nTable.id !== 'participantsTable') {
                    return true;
                }
                var currentStatus = $('#statusFilter').val();
                if (!currentStatus || currentStatus === '') {
                    return true;
                }
                var row = table.row(dataIndex).node();
                var rowStatus = $(row).attr('data-status');
                return rowStatus === currentStatus;
            };

            // Register the custom filter
            $.fn.dataTable.ext.search.push(statusFilterFunction);

            $('#statusFilter').on('change', function () {
                table.draw();
            });
        });
    </script>
}

