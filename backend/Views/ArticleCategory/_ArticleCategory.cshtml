@using MiniAppGIBA.Base.Dependencies.Extensions
@model MiniAppGIBA.Entities.Articles.ArticleCategory
@{
    var canEdit = User.IsEditable();
}

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title">@ViewBag.Title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" data-bs-dismiss="modal">
            <span aria-hidden="true">×</span>
        </button>
    </div>
    <div class="modal-body" style="@(canEdit ? "" : "pointer-events: none;")">
        <div class="container-fluid">
            <div class="row g-3">
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <label for="name">Tên danh mục <span class="text-danger">*</span></label>
                        <input id="name" value="@Model.Name" class="form-control" maxlength="50" required />
                    </div>
                </div>

                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <label for="displayOrder">Thứ tự hiển thị</label>
                        <input id="displayOrder"
                               type="text"
                               min="1"
                               class="form-control"
                               value="@(Model.DisplayOrder.ToString("0.##"))"
                               placeholder="Thứ tự hiển thị"
                               oninput="InputValidator.number(this)"
                               data-error-message="Vui lòng nhập thứ tự hiển thị danh mục."
                               required />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
        <button type="submit" class="btn btn-primary @(canEdit ? "" : "d-none")" onclick="HandleSaveOrUpdate('@Model.Id')">@ViewBag.Button</button>
    </div>
</div>